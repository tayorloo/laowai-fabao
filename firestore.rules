rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(uid) { return isSignedIn() && request.auth.uid == uid; }

    match /policies/{doc} {
      allow read: if true;
      allow write: if false;
    }

    match /faqs/{doc} {
      allow read: if true;
      allow write: if false;
    }

    match /cities/{doc} { allow read: if true; allow write: if false; }
    match /attractions/{doc} { allow read: if true; allow write: if false; }
    match /food_items/{doc} { allow read: if true; allow write: if false; }
    match /lessons/{doc} { allow read: if true; allow write: if false; }

    match /user_progress/{uid} {
      allow read, write: if isOwner(uid);
    }

    match /feedback/{doc} {
      allow create: if isSignedIn();
      allow read: if false;
      allow update, delete: if false;
    }

    match /sys_config/{doc} {
      allow read: if true;
      allow write: if false;
    }
  }
}